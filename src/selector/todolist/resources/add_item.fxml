<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>

<BorderPane prefHeight="275.0" prefWidth="250.0" xmlns:fx="http://javafx.com/fxml"
	id="main">
	<center>
		<VBox styleClass="input-area" spacing="5">
			<children>
				<Label id="content-header" text="Label:"/>
				<TextField fx:id="label" promptText="Label">
				</TextField>
				<Label id="content-header" text="Header:"/>
				<TextField fx:id="content_header" promptText="Header">
				</TextField>
				<Label id="content-text" text="Content:"/>
				<TextField fx:id="content" promptText="Content">
				</TextField>
			</children>
		</VBox>
	</center>
	<bottom>
		<HBox styleClass="footer-section">
			<children>
				<Button text="Add Item" onAction="#additembtn">
					<graphic>
						<ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="selector/todolist/images/add_icon.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
				<Button id="go-back" text="Cancel" onAction="#closebtn">
					<graphic>
						<ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="selector/todolist/images/cancel_icon.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>