<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>

<BorderPane prefHeight="275.0" prefWidth="250.0" xmlns:fx="http://javafx.com/fxml"
	id="main">
	<center>
		<VBox styleClass="input-area" spacing="5">
			<children>
				<Label id="content-header" text="Directory To Save:"/>
				<Label id="content" fx:id="directory" style="-fx-wrap-text: true;" text="Directory here"/>
				<Button text="Select Directory" style="-fx-underline: true;" onAction="#selectDirectory"/>
			</children>
		</VBox>
	</center>
	<bottom>
		<HBox styleClass="footer-section">
			<children>
				<Button id="go-back" text="Close" onAction="#closebtn">
					<graphic>
						<ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="selector/todolist/images/cancel_icon.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>